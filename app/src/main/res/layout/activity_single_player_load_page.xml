<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".single_player_load_page">

    <Button
        android:id="@+id/image_container"
        android:layout_width="115dp"
        android:layout_height="134dp"
        android:background="@drawable/nigeria_movies_icon_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17000002" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#0C0C0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_container"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/game_type"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/background_container"
            android:gravity="center"
            android:text="Nigeria history_quiz"
            android:textColor="#B89CE4"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/game_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/background_container"
            android:gravity="center"
            android:paddingLeft="70dp"
            android:paddingTop="30dp"
            android:paddingRight="70dp"
            android:paddingBottom="70dp"
            android:text="How well do you know Nigerian Movies ?  Play this game to Find out"
            android:textColor="#AEB3E1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_type"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/start_game_btn"
            android:layout_width="148dp"
            android:layout_height="46dp"
            android:background="@drawable/button_drawable_container"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Start Game"
            android:textColor="#D3E7FF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_description"
            app:layout_constraintVertical_bias="0.3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/game_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_type"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:background="#BA7734D8"
                android:gravity="center"
                android:text="Total Questions:  10"
                android:textColor="#3EFB28"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/feedback2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:background="#192CDA"
                android:gravity="center"
                android:text="Duration : 2 min, 30 secs"
                android:textColor="#F4E921"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>